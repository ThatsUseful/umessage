<tr class="<%= message.identifier == 'Me' ? 'from-me' : 'from-other' %>">
  <td class="sender"><%= message.identifier %></td>
  <td class="message">
    <% if message.cache_has_attachments? %>
      <% if message.is_balloon? %>
        <p><%= message.title %></p>
        <p><%= auto_link(simple_format(message.summary)) %></p>
        <p><%= message.item_type %></p>
        <p><%= auto_link(message.item_url) %></p>
        <p><%= message.site_name %></p>
        <p><%= message.twitter %></p>
        <p><%= message.facebook %></p>
        <p><%= message.icon_original_url %></p>
        <p><%= message.image_original_url %></p>
        <p><%= message.icon_cached.filename if message.icon_cached %></p>
        <p><%= message.image_cached.filename if message.image_cached %></p>
      <% else %>
        <% message.attachments.each do |a| %>
          <%= attachment_image_tag a, style: "max-width: 90%; max-height: 200px" %>
        <% end -%>
      <% end -%>
    <% end -%>

    <%= auto_link(simple_format(message.text_for_chat), html: { target: "_blank" }) %>
  </td>
  <td class="sent-at">
    <small><%= datetime(DateTime.parse(message.sent_at)) %></small>
  </td>
</tr>
